#%%
#creating empty list to store output
array = np.arange(13)
print(array)
myoutput = []
for i in (array):
    myinput = grid[i]
    for k,g in groupby(myinput):
        myoutput.append('line')
        myoutput.append((len(list(g)),int(k)))
print (myinput)
print(*myoutput)
